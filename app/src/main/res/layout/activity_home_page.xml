<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="112dp"
        android:gravity="center"
        android:maxEms="12"
        android:maxLines="2"
        android:text="Youâ€™ll receive a 4 digit code to verify next."
        android:textSize="20sp"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/borders"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@drawable/group" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipper"
                android:textColor="@color/black"
                android:textSize="18dp"

                />

            <TextView
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Lorem ipsum dolor sit amet,consectetur adipiscing"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/borders"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@drawable/group" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transporter"
                android:textColor="@color/black"
                android:textSize="18dp"

                />

            <TextView
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Lorem ipsum dolor sit amet,consectetur adipiscing"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>


    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"


        >


        <Button
            android:id="@+id/Continue_Btn"
            android:layout_width="327dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/button_color"
            android:text="CONTINUE"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"


            />

        <ProgressBar
            android:id="@+id/progress_bar_mobile"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:visibility="gone">

        </ProgressBar>
    </FrameLayout>


    <Button
        android:id="@+id/Logout_Btn"
        android:layout_width="327dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/button_color"
        android:text="LOG OUT"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"


        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:background="@drawable/image_one_background"
        android:src="@drawable/image_one_foreground"

        />


</LinearLayout>